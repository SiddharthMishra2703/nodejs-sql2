<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
    <link rel="stylesheet" href="style.css">
    <title>Data</title>
    <style>
        body{
            background-color: white;
        }
    </style>
</head>
<body>
    <div class="mb-3 align">
        <form action="/download" method="post">
            <input class="btn btn-primary" type="submit" value="download csv file">
            <input class="btn btn-primary" type="button" onclick="window.location.href='/'" value="login page">
        </form>
    </div>
    <div class="width">
        <table class="table table-striped">
            <tr>
                <th>Order Id</th>
                <th>Order Date</th>
                <th>User Id</th>
                <th>Item</th>
                <th>Count</th>
                <th>Weight</th>
                <th>Request</th>
            </tr>
            <% for( let i = 0; i < result.length; i++ ) { %>
                <tr>
                    <td><%= result[i].order_id %></td>
                    <td><%= result[i].order_date.toString().slice(0, 15) %></td>
                    <td><%= result[i].user_id %></td>
                    <td><%= result[i].item %></td>
                    <td><%= result[i].count %></td>
                    <td><%= result[i].weight %></td>
                    <td><%= result[i].requests %></td>
                </tr>
            <% } %>
        </table>
    </div>
</body>
</html>