<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
    <link rel="stylesheet" href="style.css">
    <title>Change Password</title>
</head>
<body>
    <div class="container center">
        <form id="test" action="/change-pass" method="post">
            <label class="form-label" for="number">Enter Mobile No</label>
            <input required class="form-control" type="number" name="number"><br>
            <label class="form-label" for="password">New Password</label>
            <input id="pswd1" required class="form-control" type="password" name="password"><br>
            <label class="form-label" for="confirm-password">Confirm New Password</label>
            <input id="pswd2" required class="form-control" type="password"><br>
            <div class="align">
                <input class="btn btn-primary btn-lg" type="button"   onclick="matchPassword()" value="Update Password">
                <input class="btn btn-primary btn-lg"  type="button" onclick="window.location.href='/'" value="cancel">
            </div>
        </form>
    </div>
    <script>  
        function matchPassword() {  
          var pw1 = document.getElementById("pswd1").value;  
          var pw2 = document.getElementById("pswd2").value;  
          if(pw1 != pw2 || pw1.length < 0)  
          {   
            alert("Passwords did not match");  
          } else {  
            document.getElementById("test").submit();
          }  
        }  
        </script>
</body>
</html>